@model IEnumerable<Employees.Models.Employee>

@{
    ViewData["Title"] = "Главная";
}


<style>
    .button {
        background: #E0FFFF;
        color: black;
        text-decoration: none;
    }

    .addButton {
        background: #b2ff5c;
        color: black;
        text-decoration: none;
        font-size: 15pt;
    }

    a {
        cursor: pointer;
    }

    .editButton {
        background: #2cafd6;
        color: black;
        text-decoration: none;
    }

    .bossesButton {
        background: #7f94ba;
        color: black;
        text-decoration: none;
    }

    .deleteButton {
        background: #FA8072;
        color: black;
        text-decoration: none;
    }

    .theadstyle,
    .tfootstyle {
        background-color: #3f87a6;
        color: #fff;
    }

    .tbodystyle {
        background-color: #e4f0f5;
    }

    .tdstyle {
        text-align: center;
    }


    .captionstyle {
        padding: 10px;
        caption-side: bottom;
    }

    .tablestyle {
        border-collapse: collapse;
        border: 2px solid rgb(200, 200, 200);
        letter-spacing: 1px;
        font-family: sans-serif;
        font-size: .8rem;
    }

    .tdstyle,
    .thstyle {
        border: 1px solid rgb(190, 190, 190);
        padding: 5px 10px;
    }

    tr {
        vertical-align: top;
    }

    .pagination {
        color: black;
        float: left;
        padding: 8px 16px;
        text-decoration: none;
    }
</style>

<h2 align="center">Данные о сотрудниках</h2>
<span align="left">
    <a id="add" class="addButton">Добавить</a>
</span>
<div>
    <table align="left">
        <tr>
            <th style="width: 50%">
                <div id="empTable">
                </div>
            </th>
            <th>
                <div id="appearingLayout">
                </div>
            </th>
        </tr>
    </table>
</div>
<div class="item-list">
    <ul class="pager">
        <li class="pager-current first"><span>1</span></li>
        <li class="pager-item"><a href="/node?page=1" title="На страницу номер 2">2</a></li>
        <li class="pager-item"><a href="/node?page=2" title="На страницу номер 3">3</a></li>
        <li class="pager-item"><a href="/node?page=3" title="На страницу номер 4">4</a></li>
        <li class="pager-next last"><a href="/node?page=1" title="На следующую страницу">›</a></li>
    </ul>
</div>