<!DOCTYPE html>
<html lang="ru">

<head>
    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/app.js"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/css/customcss/mystyle.css" />
</head>
<body style="background-color:#F3FEFD">
    <header>
        <nav>
            <div id="header">
                <ul>
                    <li class="leftToRight">
                        <a asp-action="Index" id="mainPage" style="color: black">Главная</a>
                    </li>
                    <li class="leftToRight">
                        <a asp-action="About" id="aboutPage" style="color: black">Инфо</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
